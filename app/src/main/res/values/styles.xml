<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.FullScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TabLayoutStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Toolbar.Dark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorControlHighlight">@color/gray_3</item>
    </style>
    <style name="AppTheme.Toolbar.Light" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@color/black_3</item>
        <item name="android:textColorSecondary">@color/black_3</item>
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/gray_3</item>
    </style>
    
    <style name="RadioButtonStyle" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:padding">12sp</item>
        <item name="android:textColor">@color/black_1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:buttonTint">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Splash" parent="Theme.MaterialComponents.Light">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>