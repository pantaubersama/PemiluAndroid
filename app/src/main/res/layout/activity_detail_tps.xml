<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pantaubersama.app.ui.merayakan.rekapitulasi.detailtps.DetailTPSActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <include layout="@layout/layout_toolbar_light"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/gray_3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@color/gray_1"
                android:gravity="center_vertical">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/user_avatar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_avatar_placeholder"/>

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suparti, "
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/black_3"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/user_cluster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cluster Tes"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/lato_medium"
                    android:textColor="@color/black_3"
                    android:textSize="10sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tps_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:background="@color/orange">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tps_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TPS 02"
                            android:textSize="14sp"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/lato_bold"/>

                        <TextView
                            android:id="@+id/tps_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Yogyakarta, Sleman, Moyudan, Sumberagung"
                            android:textSize="12sp"
                            android:fontFamily="@font/bw_modelica_bold"
                            android:textColor="@color/black_3"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/presiden_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:id="@+id/paslon_1_color"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:orientation="horizontal"
                            android:background="@drawable/circle_background_primary">

                        </LinearLayout>

                        <TextView
                            android:id="@+id/paslon_1_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jokowi-Ma'ruh"
                            android:layout_marginLeft="12sp"
                            android:layout_marginStart="12dp"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="12sp"
                            android:textColor="@color/black_3"/>

                        <TextView
                            android:id="@+id/paslon_1_percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginStart="12dp"
                            android:text="30%"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/lato_bold"
                            android:textSize="12sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="|"
                            android:layout_marginStart="12dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginEnd="12dp"
                            android:fontFamily="@font/lato_bold"
                            android:textColor="@color/black_3"/>

                        <TextView
                            android:id="@+id/paslon_1_votes_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100.000 Suara"
                            android:fontFamily="@font/lato_bold"
                            android:textColor="@color/black_3"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">

                        <LinearLayout
                            android:id="@+id/paslon_2_color"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:orientation="horizontal"
                            android:background="@drawable/circle_background_paslon_2">

                        </LinearLayout>

                        <TextView
                            android:id="@+id/paslon_2_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prabowo-Sandi"
                            android:layout_marginLeft="12sp"
                            android:layout_marginStart="12dp"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="12sp"
                            android:textColor="@color/black_3"/>

                        <TextView
                            android:id="@+id/paslon_2_percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginStart="12dp"
                            android:text="30%"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/lato_bold"
                            android:textSize="12sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="|"
                            android:layout_marginStart="12dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginEnd="12dp"
                            android:fontFamily="@font/lato_bold"
                            android:textColor="@color/black_3"/>

                        <TextView
                            android:id="@+id/paslon_2_votes_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100.000 Suara"
                            android:fontFamily="@font/lato_bold"
                            android:textColor="@color/black_3"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Suara Tidak Sah :"
                        android:textColor="@color/black_3"
                        android:textSize="11sp"
                        android:fontFamily="@font/lato_regular"/>

                    <TextView
                        android:id="@+id/golput_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30"
                        android:textColor="@color/black_3"
                        android:textSize="11sp"
                        android:fontFamily="@font/lato_bold"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Suara Masuk :"
                        android:textColor="@color/black_3"
                        android:textSize="11sp"
                        android:fontFamily="@font/lato_regular"/>

                    <TextView
                        android:id="@+id/votes_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10.000"
                        android:textColor="@color/black_3"
                        android:textSize="11sp"
                        android:fontFamily="@font/lato_bold"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lampiran C1 Presiden"
                    android:textSize="14sp"
                    android:textColor="@color/black_3"
                    android:fontFamily="@font/bw_modelica_bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/c1_image"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/ic_avatar_placeholder"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Model_C1.jps"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/gray_5"
                        android:textSize="12sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
