<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_rounded_16dp_white"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingTop="24dp"
    android:paddingEnd="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_outline_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <EditText
            android:id="@+id/pilih_bidang_kajian_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_search_inactive"
            android:drawablePadding="8dp"
            android:fontFamily="@font/lato_italic"
            android:hint="Pilih bidang kajian"
            android:imeOptions="actionSearch"
            android:lineSpacingExtra="12sp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textColor="@color/gray_5"
            android:textColorHint="@color/gray_dark_1"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_rounded_outline_white">

        <include layout="@layout/layout_common_recyclerview" />

    </LinearLayout>

</LinearLayout>