<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.pantaubersama.app.ui.onboarding.OnboardingActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </androidx.viewpager.widget.ViewPager>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/skip_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Lewati"
            android:textColor="@color/gray_4"
            android:layout_alignParentStart="true"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:layout_toEndOf="@id/dots_indicator"
            android:layout_toStartOf="@id/dots_indicator"
            android:gravity="center"/>

        <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
            android:id="@+id/dots_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dotsColor="@color/colorPrimary"
            app:dotsStrokeColor="@color/gray_dark_1"
            app:dotsStrokeWidth="11dp"
            app:dotsCornerRadius="8dp"
            app:dotsSize="12dp"
            app:dotsSpacing="8dp"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Next"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:layout_toRightOf="@id/dots_indicator"
            android:layout_toEndOf="@id/dots_indicator"
            android:gravity="center"/>

    </RelativeLayout>

</FrameLayout>
