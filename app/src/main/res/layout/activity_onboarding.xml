<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.pantaubersama.app.ui.onboarding.OnboardingActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">


    </androidx.viewpager.widget.ViewPager>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/skip_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:fontFamily="@font/bw_modelica_bold"
            android:text="Lewati"
            android:textColor="@color/gray_4"
            android:layout_alignParentStart="true"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:layout_toEndOf="@id/dots_indicator"
            android:layout_toStartOf="@id/dots_indicator"
            android:gravity="center"
            android:foreground="?attr/selectableItemBackground"/>

        <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
            android:id="@+id/dots_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dotsColor="@color/colorPrimary"
            app:dotsStrokeColor="@color/gray_dark_1"
            app:dotsStrokeWidth="11dp"
            app:dotsCornerRadius="8dp"
            app:dotsSize="12dp"
            app:dotsSpacing="8dp"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:fontFamily="@font/bw_modelica_bold"
            android:text="@string/next_action"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:layout_toRightOf="@id/dots_indicator"
            android:layout_toEndOf="@id/dots_indicator"
            android:gravity="center"
            android:foreground="?attr/selectableItemBackground"/>

    </RelativeLayout>

</LinearLayout>
