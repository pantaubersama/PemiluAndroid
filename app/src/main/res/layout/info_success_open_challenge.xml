<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_16dp_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/info_bidang_kajian_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/info_bidang_kajian_go"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="40dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/success_mask_00063" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/bw_modelica_bold"
            android:gravity="center_horizontal"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="-2sp"
            android:text="Berhasil!"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:lineSpacingExtra="3sp"
            android:text="Tantangan berhasil ditayangkan di Wordstadium dan dibagikan melalui media sosial kamu!"
            android:textColor="@color/gray_dark_3"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/go_it"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_2"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:gravity="center_horizontal"
            android:letterSpacing="0.1"
            android:lineSpacingExtra="-2sp"
            android:text="GOT IT"
            android:textColor="@color/black_2"
            android:textSize="14sp" />

    </LinearLayout>
</RelativeLayout>