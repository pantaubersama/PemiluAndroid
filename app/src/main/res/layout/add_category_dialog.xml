<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_rounded_white"
        android:paddingLeft="16dp"
        android:paddingTop="30dp"
        android:paddingRight="16dp"
        android:paddingBottom="30dp"
        android:id="@+id/new_category_container">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bw_modelica_bold"
            android:lineSpacingExtra="4sp"
            android:text="@string/label_masukkan_nama_kategori"
            android:textColor="@color/black_3"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/add_category_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:lineSpacingExtra="3sp"
            android:textColor="@color/black_3"
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_rounded_tosca_outline"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:hint="Nama kategori"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="end">

            <TextView
                android:id="@+id/add_category_batal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:fontFamily="@font/lato_bold"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="3sp"
                android:padding="16dp"
                android:text="@string/batal_action"
                android:textColor="@color/gray_4"
                android:textSize="16sp"
                android:foreground="?selectableItemBackground"/>

            <TextView
                android:id="@+id/add_category_buat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:fontFamily="@font/lato_bold"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="3sp"
                android:text="@string/buat_action"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:padding="16dp"
                android:foreground="?selectableItemBackground"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/translucent_white"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</FrameLayout>