<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/c1_model_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_avatar_placeholder"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/c1_model_image_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Model_C1.jpg"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/gray_5"
        android:textSize="12sp"
        android:layout_toRightOf="@id/c1_model_image"
        android:layout_toEndOf="@id/c1_model_image"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/delete_action"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/close_camera_button"
        android:tint="@color/black_3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>