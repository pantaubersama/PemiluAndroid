<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.pantaubersama.app.ui.penpol.PenPolFragment">

    <RelativeLayout
        android:id="@+id/rl_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tabMode="scrollable"
            app:tabIndicatorColor="@color/white"
            app:tabIndicatorHeight="3dp">

        </com.google.android.material.tabs.TabLayout>

        <ImageView
            android:id="@+id/create_new_tanya_kandidat_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_add"
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/filter_pertanyaan_button"
            android:layout_toStartOf="@id/filter_pertanyaan_button"/>

        <ImageView
            android:id="@+id/filter_pertanyaan_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_filter"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"/>
    </RelativeLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_tab_layout"
        android:background="@color/white">

    </androidx.viewpager.widget.ViewPager>

</RelativeLayout>
