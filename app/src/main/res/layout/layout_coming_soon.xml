<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_coming_soon"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_coming_soon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:scaleType="centerInside"
        app:lottie_fileName="lottie_coming_soon.json"
        app:lottie_autoPlay="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coming_soon"
            android:textSize="16sp"
            android:fontFamily="@font/bw_modelica_bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAlignment="center"
            android:text="@string/pantau_terus_di_web"
            android:textSize="14sp"
            android:fontFamily="@font/lato_regular"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">
            
            <ImageView
                android:id="@+id/iv_logo_pantau_web"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/ic_logo_pantau_white_in_red"
                android:background="?selectableItemBackgroundBorderless"/>

            <ImageView
                android:id="@+id/iv_logo_facebook"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/ic_logo_facebook_blue"
                android:background="?selectableItemBackgroundBorderless"/>

            <ImageView
                android:id="@+id/iv_logo_instagram"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/ic_logo_instagram_transparent"
                android:background="?selectableItemBackgroundBorderless"/>

            <ImageView
                android:id="@+id/iv_logo_twitter"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/ic_twitter_white_in_blue"
                android:background="?selectableItemBackgroundBorderless"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>