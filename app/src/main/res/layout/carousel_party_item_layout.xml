<com.pantaubersama.app.ui.note.CarouselLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.pantaubersama.app.ui.note.CarouselPresidentItemFragment">

    <FrameLayout
        android:id="@+id/wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="306dp"
            android:layout_height="274dp"
            android:background="@drawable/rounded_gray_3"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="290dp"
            android:background="@drawable/rounded_gray_2"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/party_images"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                app:riv_corner_radius="4dp"/>

            <TextView
                android:id="@+id/party_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bw_modelica_bold"
                android:textColor="@color/black_3"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/party_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_medium"
                android:textColor="@color/black_3"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

    </FrameLayout>

</com.pantaubersama.app.ui.note.CarouselLinearLayout>
