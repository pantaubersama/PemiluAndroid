<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.pantaubersama.app.ui.penpol.kuis.ikutikuis.IkutiKuisActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ikuti_quiz_banner"
        android:adjustViewBounds="true"
        android:contentDescription="Ikuti kuis"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="240dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:layout_above="@id/start_quiz_action">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/gray_2"
            android:gravity="center_horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/quiz_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kuis minggu ke-2"
                android:fontFamily="@font/bw_modelica_bold"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:includeFontPadding="false"/>

            <TextView
                android:id="@+id/question_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 Pertanyaan"
                android:textColor="@color/black"
                android:fontFamily="@font/bw_modelica_regular"
                android:gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/quiz_long_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_medium"
                    android:textColor="@color/black"
                    android:text="@string/quiz_text_dummy"
                    android:gravity="center_horizontal"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/start_quiz_action"
        android:background="@color/purple"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:foreground="?selectableItemBackground"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:letterSpacing="0.1"
            android:lineSpacingExtra="3sp"
            android:text="Mulai"
            android:fontFamily="@font/lato_bold"
            android:textAllCaps="true"/>

    </LinearLayout>

</RelativeLayout>
