<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.pantaubersama.app.ui.onboarding.OnboardingChildFragment"
    android:gravity="center">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_onboarding_content"
        android:scaleType="centerInside"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:gravity="top">

        <TextView
            android:id="@+id/tv_onboarding_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/black_3"
            tools:text="Voice Over Noise"
            android:fontFamily="@font/bw_modelica_bold"
            android:layout_marginTop="24dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_onboarding_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:textSize="16sp"
            android:textColor="@color/gray_dark_2"
            tools:text="Linimasa konten kampanye resmi tanpa sampah Informasi."
            android:layout_marginTop="12dp"
            android:textAlignment="center"
            android:gravity="center"/>
    </LinearLayout>


</LinearLayout>
