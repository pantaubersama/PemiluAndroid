<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_collapseMode="parallax"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_versus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_versus_outline_white"
        android:fontFamily="@font/lato_bold"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:paddingTop="4dp"
        android:text="VS"
        android:textSize="12sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_avatar_1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ava_calon_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_versus"
        app:layout_constraintTop_toBottomOf="@id/tv_versus"
        app:riv_border_color="@color/white"
        app:riv_border_width="1dp"
        app:riv_oval="true"/>

    <TextView
        android:id="@+id/tv_name_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="18"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="13sp"
        android:text="Raja Kampret"
        android:fontFamily="@font/bw_modelica_bold"
        android:textColor="@color/white"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/iv_avatar_1"
        app:layout_constraintTop_toBottomOf="@id/iv_avatar_1"
        app:layout_constraintTop_toTopOf="@id/iv_avatar_1"/>

    <TextView
        android:id="@+id/tv_username_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="18"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="\@raja_kampret"
        android:textSize="10sp"
        android:fontFamily="@font/lato_bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_name_1"
        app:layout_constraintStart_toStartOf="@id/tv_name_1"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_avatar_2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ava_calon_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_versus"
        app:layout_constraintTop_toBottomOf="@id/tv_versus"
        app:riv_border_color="@color/white"
        app:riv_border_width="1dp"
        app:riv_oval="true"/>

    <TextView
        android:id="@+id/tv_name_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="18"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="13sp"
        android:text="Ratu Cebong"
        android:fontFamily="@font/bw_modelica_bold"
        android:textColor="@color/white"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@id/iv_avatar_2"
        app:layout_constraintTop_toBottomOf="@id/iv_avatar_2"
        app:layout_constraintTop_toTopOf="@id/iv_avatar_2"/>

    <TextView
        android:id="@+id/tv_username_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="18"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="\@ratu_cebong"
        android:textSize="10sp"
        android:fontFamily="@font/lato_bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_name_2"
        app:layout_constraintStart_toStartOf="@id/tv_name_2"/>

    <RelativeLayout
        android:id="@+id/rl_sisa_waktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_username_1"
        app:layout_constraintStart_toEndOf="@id/tv_versus"
        app:layout_constraintEnd_toStartOf="@id/tv_versus">

        <ImageView
            android:id="@+id/iv_saldo_waktu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_saldo_waktu_white_24"
            android:layout_centerVertical="true"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_sisa_waktu_anda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_saldo_waktu"
            android:layout_marginStart="4dp"
            android:text="@string/sisa_waktu_anda"
            android:textSize="10sp"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_sisa_waktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_saldo_waktu"
            android:layout_marginStart="4dp"
            android:layout_below="@id/tv_sisa_waktu_anda"
            android:text="40 MENIT"
            android:textSize="14sp"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/white"/>

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>