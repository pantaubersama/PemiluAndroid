<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.pantaubersama.app.ui.note.partai.PartaiFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_3"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:lineSpacingExtra="2sp"
            android:textColor="@color/gray_5"
            android:textSize="10sp"
            android:text="@string/info_preferensi_partai" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_italic"
            android:lineSpacingExtra="8sp"
            android:textColor="@color/gray_4"
            android:textSize="10sp"
            android:text="@string/partai_mana_yang_cocok" />

        <TextView
            android:id="@+id/partai_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/lato_medium"
            android:lineSpacingExtra="12sp"
            android:textColor="@color/orange"
            android:textSize="12sp"
            android:text="(Belum menentukan pilihan)" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/partai_rv_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
