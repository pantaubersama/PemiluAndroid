<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" />
                    <solid android:color="@color/white"/>
                    <stroke android:color="@color/gray_dark_1" android:width="0.5dp"/>
                    <padding android:bottom="0dp" android:left="0dp" android:right="4dp" android:top="0dp" />
